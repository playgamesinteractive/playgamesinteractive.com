{
    "name": "playgamesinteractive/waitlist-site",
    "description": "Play Games Interactive waitlist landing page with Supabase integration",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Play Games Interactive",
            "email": "hello@playgamesinteractive.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "files": [
            "config.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); echo 'Created .env file from .env.example\\n'; }\""
        ],
        "test": "phpunit",
        "serve": "php -S localhost:8080"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "deployment": {
            "heroku": {
                "document-root": ".",
                "index-document": "index.html"
            },
            "railway": {
                "build": {
                    "command": "composer install --no-dev --optimize-autoloader"
                },
                "start": {
                    "command": "php -S 0.0.0.0:$PORT"
                }
            }
        }
    }
}